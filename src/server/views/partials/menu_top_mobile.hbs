<table class="tableGroupNotificationMB">
          <tr>
            	{{#mIf roleA '||' roleB}}
            <td rowspan="2" style="width:20%;">
                <div class="information_other_left_2MB">
                    <div class="sub_infoMB">施設危険予測</div>
                    <div class="sub_infoMB">
                    <div class="sub_info_halfMB sub_info_half_boder">高層階</div>
                    <div class="sub_info_halfMB color_red_info">4</div>
                    </div>
                    <div class="sub_infoMB">
                    <div class="sub_info_halfMB sub_info_half_boder">中層階</div>
                    <div class="sub_info_halfMB color_orange_info">3</div>
                    </div>
                    <div class="sub_infoMB">
                    <div class="sub_info_halfMB sub_info_half_boder">低層階</div>
                    <div class="sub_info_halfMB color_yellow_info">2</div>
                    </div>
                </div>
              </td>
              {{/mIf}}
              {{#if roleB}}
                {{{{raw-helper}}}}
                    <td ng-repeat="phase in phases">
                        <img class="mainStatusImg" id="mainStatusImg_{{phase.id}}" ng-click="changePhase($index)" ng-src="{{phase.imageSrc}}"/>
                    </td>
                {{{{/raw-helper}}}}
                    {{else}}
                    {{#each mainStatus.disasterStatus}}
                        <td><img class="mainStatusImg" src="{{imageSrc}}"/></td>
                    {{/each}}
            {{/if}}
          </tr>   
          <tr>
                <td colspan="4">
                <ul id="menuMobile" class="list-inline  nav-pills nav-stacked">
                  <li class="list-inline-item colorpurplelight active"><a data-toggle="pill" ng-click="selectMenu('鉄道運行', '')" href="#train">鉄道運行 
                  	<span ng-show="hasTrainUpdate" class="colorred">!</span></a></li>
                  <li class="list-inline-item colorpurplelight"><a data-toggle="pill" ng-click="selectMenu('一時滞在施設', 'building')" href="#building">一時滞在施設 
                  	<span ng-show="hasBuildingUpdate" class="colorred">!</span></a></li>
                  <li class="list-inline-item colorpurplelight"><a data-toggle="pill" ng-click="selectMenu('医療機関', 'medical')" href="#medical">医療機関 
                  	<span ng-show="hasMedicalUpdate" class="colorred">!</span></a></li>
                  {{#mIf roleA '||' roleB}}
                  <li class="list-inline-item colorpurplelight"><a data-toggle="pill" ng-click="selectMenu('被害情報', 'damage')" href="#damage">被害情報 
                  	<span ng-show="hasTrainStatisticUpdate || hasBuildingUpdate 
	        				|| hasMedicalStatisticUpdate || hasPreventionUpdate" class="colorred">!</span></a></li>
                  {{/mIf}}
                </ul>
            </td>
          </tr>  
        </table>